<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="adyatma.untad.skripsi">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SKRIPSI"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".Views.DetailHistory"
            android:exported="false"
            android:theme="@style/Theme.NoAction" />
        <activity
            android:name=".Views.HistoryActivity"
            android:exported="true"
            android:theme="@style/Theme.NoAction" />
        <activity
            android:name=".Views.OTPActivity"
            android:exported="true"
            android:theme="@style/Theme.NoAction" />
        <activity
            android:name=".Views.OrderActivity"
            android:exported="true"
            android:theme="@style/Theme.NoAction" />
        <activity
            android:name=".Views.UpdateData"
            android:exported="true"
            android:theme="@style/Theme.NoAction" />
        <activity
            android:name=".Views.StartActivity"
            android:exported="true"
            android:theme="@style/Theme.NoAction" />
        <activity
            android:name=".Views.Splashscreen"
            android:exported="true"
            android:theme="@style/Theme.NoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NoAction" />
    </application>

</manifest>