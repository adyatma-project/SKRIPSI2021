        <item name="colorPrimary">@color/aqua</item>
        <item name="colorPrimaryVariant">@color/aqua_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
